{
    "conjoon": {
        "plugins":{
            "application": [
                "extjs-plug-themeutil"
            ],
            "components": [
                {
                    "cmp": "cn_navport-tbar",
                    "pclass": "conjoon.theme.material.plugin.ModeSwitchPlugin",
                    "event": "beforerender"
                }
            ]
        },
        "application": {
            "announce": {
                "message": "Thank you for using conjoon. Leave a ‚≠ê at <a target=\"_blank\" href=\"https://github.com/conjoon/conjoon\">Github</a> if you like it!",
                "type": "success"
            }
        },
        "packages": {

            "extjs-app-imapuser": {
                "autoLoad": {
                    "registerController": true
                },
                "config": {
                    "service": {
                        "rest-imapuser": {
                            "base": "https://php-ms-imapuser.ddev.site/rest-imapuser/api/v0"
                        }
                    }
                }
            },
            "extjs-dev-imapusersim": {
                "autoLoad": {
                    "registerController": false
                },
                "config": {
                    "auth": {
                        "url": "https://php-ms-imapuser.ddev.site/rest-imapuser/api/v.*?/auth(/.*)?",
                        "enabled": true,
                        "delay": 250
                    }
                }
            },
            "extjs-dev-webmailsim": {
                "autoLoad": {
                    "registerController": false
                },
                "config": {
                    "attachment": {
                        "url": "https://php-ms-imapuser.ddev.site/rest-api-email/api/v.*?/MailAccounts/(.+)/MailFolders/(.+)/MessageItems/(.+)/Attachments(/.*)?",
                        "enabled": true,
                        "delay": 250
                    },
                    "messageItem": {
                        "url": "https://php-ms-imapuser.ddev.site/rest-api-email/api/v.*?/MailAccounts/(.+)/MailFolders/(.+)/MessageItems(/.*)?",
                        "enabled": true,
                        "delay": 250
                    },
                    "mailFolder": {
                        "url": "https://php-ms-imapuser.ddev.site/rest-api-email/api/v.*?/MailAccounts/(.+)/MailFolders(/.*)?",
                        "enabled": true,
                        "delay": 250
                    },
                    "mailAccount": {
                        "url": "https://php-ms-imapuser.ddev.site/rest-api-email/api/v.*?/MailAccounts(/d+)?",
                        "enabled": true,
                        "delay": 250
                    },
                    "sendMessage": {
                        "url": "https://php-ms-imapuser.ddev.site/rest-api-email/api/v.*?/SendMessage(/d+)?",
                        "enabled": true,
                        "delay": 250
                    }
                }
            },
            "extjs-ctrl-simmanager": {
                "autoLoad": {
                    "registerController": false
                }
            }
        }
    }
}
